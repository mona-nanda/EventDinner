@model NerdDinner.Models.BookDinner

@{
    ViewData["Title"] = "Details";
}


<h2 style="margin-top: 5%;">Meetup Details</h2>
@{

    var flag = (int)@ViewData["flag"];
    var userId = @ViewData["session"];
}

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Meetup Name</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            When
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventDate)
        </dd>
        <dt class="col-sm-2">
            Where
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Organizer
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HostedBy)
        </dd>
        <dt class="col-sm-2">
            Contact Us
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactPhone)
        </dd>
    </dl>
</div>
@if (@userId != null)
{
    <form asp-action="Rsvp">
        <input type="hidden" asp-for="@Model.DinnerId" />
        <input type="submit" value="RSVP" class="btn btn-danger" />
    </form>
    <br>
    @if (@flag != 0)
    {
<div>

    <a asp-action="Edit" asp-route-id=@Model.DinnerId class="navbar-brand"> Edit this event</a>
    <a asp-action="Delete" asp-route-id=@Model.DinnerId class="navbar-brand"> Delete this event</a>
</div>
    }
    <div>
        <a asp-action="Logged" class="navbar-brand">Back to List</a>
    </div>
}
else
{
    <a asp-area="" asp-controller="Account" asp-action="Index" class="navbar-brand">Logon to RSVP to this event</a>
    <a asp-action="Index" class="navbar-brand">Back to List</a>

}
<div id="myMap" style="position:relative;width:900px;height:400px; margin-top:5%;margin-left:5%"></div>



