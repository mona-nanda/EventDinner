@model IEnumerable<NerdDinner.Models.BookDinner>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "NerdDinner";
    var rsvps = (Dictionary<int,int>)ViewData["rsvp"];
}
<div class="form-group" id="addressmain1" style="width:200px;margin-top:5%">
    <input id="address1" class="form-control" />
</div>

<div id="myMap" style="position:relative;width:900px;height:400px;"></div>

<table class="table" style="margin-top: 5%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {   
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.DinnerId"> @Html.DisplayFor(modelItem => item.Title)
                    RSVP(@if (@rsvps.ContainsKey(@item.DinnerId)){@rsvps[@item.DinnerId]}else {<h6>0</h6>})
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>


